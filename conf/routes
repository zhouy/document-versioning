# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index

# Ajax post
GET		/ajaxListPosts							Application.ajaxListPosts
GET		/ajaxCreatePost							Application.ajaxCreatePost
GET		/ajaxGenerateFormEdit					Application.ajaxGenerateFormEdit
GET		/ajaxEditPost							Application.ajaxEditPost
GET		/ajaxDeletePost							Application.ajaxDeletePost
GET		/ajaxDeleteVersion						Application.ajaxDeleteVersion
GET		/ajaxComment							Application.ajaxComment
GET		/ajaxDeleteComment						Application.ajaxDeleteComment

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Administration
*       /admin                                  module:crud

# Catch all
*       /{controller}/{action}                  {controller}.{action}