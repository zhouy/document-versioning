# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index

# Ajax post
GET		/ajaxListPosts							Posts.ajaxListPosts
GET		/ajaxCreatePost							Posts.ajaxCreatePost
GET		/ajaxFormEdit							Posts.ajaxFormEdit
GET		/ajaxEditPost							Posts.ajaxEditPost
GET		/ajaxDeletePost							Posts.ajaxDeletePost
GET		/ajaxDeleteVersion						Versions.ajaxDeleteVersion
GET		/ajaxComment							Comments.ajaxComment
GET		/ajaxDeleteComment						Comments.ajaxDeleteComment

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Administration
*       /admin                                  module:crud

# Catch all
*       /{controller}/{action}                  {controller}.{action}